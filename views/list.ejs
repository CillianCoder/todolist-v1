<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">
        <% newListItems.forEach(function(newListItem) { %>

            <form action="/delete" method="post">
                <div class="item">
                    <input onchange="this.form.submit()" value= <%= newListItem.id %> name="checkbox" type="checkbox">
                    <p>
                        <%= newListItem.name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value= <%= listTitle %> >
            </form>

            <% }); %>
                <form class="items" action="/" method="post">
                    <input type="text" name="addItem" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="button" value= <%= listTitle %> >+</button>
                </form>
    </div>
</body>

<%- include("footer") -%>